# Obsidian Clipper Configuration
# Copy this file to .env and fill in your values

# Required: Your Obsidian Local REST API key
# Get it from Obsidian Settings > Local REST API > API Key
OBSIDIAN_API_KEY=your_api_key_here

# Base URL for the Obsidian Local REST API (default: https://127.0.0.1:27124)
OBSIDIAN_BASE_URL=https://127.0.0.1:27124/

# Default note for captures (relative to vault root)
OBSIDIAN_DEFAULT_NOTE=00-Inbox/Quick Captures.md

# Directory for attachments (relative to vault root)
OBSIDIAN_ATTACHMENT_DIR=Attachments/

# Verify SSL certificates (set to true if using proper certificates)
OBSIDIAN_VERIFY_SSL=true

# API request timeout in seconds
OBSIDIAN_TIMEOUT=10

# Default OCR language (e.g., eng, deu, fra, spa, eng+tam for multiple)
OBSIDIAN_OCR_LANGUAGE=eng
